" Set Font for GVIM/MVIM
let s:uname = system("uname")

if s:uname == "Darwin\n"
  " OSX configuration
  :set guifont="Roboto Mono Medium for Powerline:h16"
  ":set guifont=Hack-Regular:h16
  :set background=dark
endif

if s:uname == "Linux\n"
  " Obviously Linux configuration
  :set guifont=Monospace
endif

set transparency=8
