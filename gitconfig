[core]
	editor = vim -f
	whitespace = trailing-whitespace,tab-in-indent,tabwidth=2
  excludesfile = ~/.gitignore
[branch]
  autosetuprebase = always
[push]
	default = current
[alias]
  st = status
  d = diff --color-words
  ci = commit -v
  co = checkout
  b = branch
  cia = commit -v -a
  l = log
  ll = log -p
  br = branch
  m = merge
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
